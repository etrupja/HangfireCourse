@{
    ViewData["Title"] = "Welcome";
}
@model User

<!-- Hero Section-->
<section class="hero">
    <div class="container mb-5">
        <div class="row align-items-center">
            <div class="col-lg-6">
                <h1 class="hero-heading mb-0">Stay ready</h1>
                <div class="row">
                    <div class="col-lg-10">
                        <p class="lead text-muted mt-4 mb-4">We are going online really soon. Subscribe to our mailing list so you don't miss anything!</p>
                    </div>
                </div>
                <form asp-controller="Users" asp-action="Create" class="subscription-form">
                    <div class="form-group">
                        <input asp-for="Username" type="text" name="username" placeholder="Username" class="form-control">
                        
                    </div>
                    <div class="form-group">
                        <input asp-for="Email" type="email" name="email" placeholder="contact@dotnethow.com" class="form-control">
                    </div>
                    <button type="submit" class="btn btn-primary">Notify me!</button>
                </form>
            </div>
            <div class="col-lg-6"><img src="images/main.svg" alt="..." class="hero-image img-fluid d-none d-lg-block"></div>
        </div>
    </div>
</section>