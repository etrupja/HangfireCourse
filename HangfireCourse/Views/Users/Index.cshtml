@model IEnumerable<HangfireCourse.Models.User>

@{
    ViewData["Title"] = "Index";
}

<section>
    <div class="container">
        <div class="text-center">
            <h2>Users</h2>
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <p class="lead text-muted mt-2">This is the list of all users waiting for the site to be online...</p>
                </div>
            </div>
            <a onclick="location.href = '@Url.Action("Hello", "Users" )'" class="btn btn-primary navbar-btn ml-0 ml-lg-3"> Update </a>
        </div>
        <div>@TempData["Student"]</div>
        <div class="integrations mt-5">
            <div class="row">
                @foreach (User user in Model)
                {
                    <div class="col-lg-4">
                        <div class="box text-center">
                            <h3 class="h4">@user.Username</h3>
                            <p class="text-small font-weight-light">@user.Email</p>
                            <a onclick="location.href = '@Url.Action("Hello", "Users", new {@id = user.Id})'" class="btn btn-success navbar-btn ml-0 ml-lg-3"> Say Hello </a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>